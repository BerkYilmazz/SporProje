@using System.Security.Claims

@if (User.Identity.IsAuthenticated)
{
    <div class=""><a class="nav-link text-light" asp-controller="Account" asp-action="AccountEdit"><i class="bi bi-person"></i> @User.FindFirst(x => x.Type == "UserName").Value</a></div>
}
else
{
    <a href="@Url.Action("Login","Account")">Login</a>
}


