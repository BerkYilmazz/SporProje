@model Topic

@{
    ViewData["Title"] = "Create Topic";
}

<h1>Create Topic</h1>

<h4>Topic</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Topic" asp-action="CreateTopic" method="post">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input type="text" required asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContentText" class="control-label"></label>
                <input type="text" required asp-for="ContentText" class="form-control"/>
                <span asp-validation-for="ContentText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-outline-primary">Create</button>
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="MyTopics">Back to List</a>
</div>